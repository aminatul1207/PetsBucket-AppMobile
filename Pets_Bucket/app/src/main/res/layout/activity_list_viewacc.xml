<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="corp.pets.pets_bucket.list_view"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#403f3f"
            android:text="Produk Accesories Hewan"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_weight="0.03"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="123dp"
                android:orientation="vertical"
                android:layout_weight="0.29">

                <!--<ImageView
                      android:layout_width="100dp"
                      android:layout_height="match_parent"
                      app:srcCompat="@drawable/gmbr"
                      android:id="@+id/imageView4" />-->
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="133dp">

                <TextView
                    android:text="Nama : Kalung"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaprd"
                    android:layout_weight="0.27" />

                <TextView
                    android:text="Harga : 50000"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/hargaprd"
                    android:layout_weight="0.28" />

                <TextView
                    android:text="Stok : 10"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stokprd"
                    android:layout_weight="0.28" />

                <TextView
                    android:text="Penjual : Rumah Kucing"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/penjual"
                    android:layout_weight="0.28" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <Button
                android:text="Detail"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="#2dbf27"
                android:id="@+id/detail" />


            <GridLayout
                android:layout_width="5dp"
                android:layout_height="match_parent">

            </GridLayout>

            <Button
                android:text="Beli"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:id="@+id/beli"
                android:background="#2dbf27" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_weight="0.03"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="123dp"
                android:orientation="vertical"
                android:layout_weight="0.29">

                <!--<ImageView
                      android:layout_width="100dp"
                      android:layout_height="match_parent"
                      app:srcCompat="@drawable/gmbr"
                      android:id="@+id/imageView4" />-->
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="133dp">

                <TextView
                    android:text="Nama : Keranjang"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaprd2"
                    android:layout_weight="0.27" />

                <TextView
                    android:text="Harga : 250000"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/hargaprd2"
                    android:layout_weight="0.28" />

                <TextView
                    android:text="Stok : 10"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stokprd2"
                    android:layout_weight="0.28" />

                <TextView
                    android:text="Penjual : Rumah Kucing"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/penjual2"
                    android:layout_weight="0.28" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <Button
                android:text="Detail"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="#2dbf27"
                android:id="@+id/detail2" />


            <GridLayout
                android:layout_width="5dp"
                android:layout_height="match_parent">

            </GridLayout>

            <Button
                android:text="Beli"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:id="@+id/beli2"
                android:background="#2dbf27" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
